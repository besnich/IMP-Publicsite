<div class="block block-grid block-grid--list">
    {% for item in data %}
    <div class="block-grid col-lg-6 col-md-6 col-sm-6 col-xs-12">
        <div class="grid-icon col-lg-3 col-md-3 col-sm-3 col-xs-12">
            <img src="{{ item.icon.src }}" class="{{ item.icon.class }}" alt="{{ item.icon.alt }}" />
        </div>
        <div class="grid-content col-lg-12 col-md-12 col-sm-12 col-xs-12">
            <h2>{{ item.header.html }}</h2>

            <ul>
                {% for target in item.list %}
                    <li>{{ target.html }}</li>
                {% endfor %}
            </ul>
        </div>
    </div>
    {% endfor %}
</div>