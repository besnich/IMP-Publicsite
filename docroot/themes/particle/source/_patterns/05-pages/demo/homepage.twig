                                  {% include "@molecules/block-grid/_block-grid.twig" with content.features_block_7  %}
                              {% endblock column_1 %}

                              {% block column_2 %}
                                  {% include "@molecules/block-grid/_block-grid.twig" with content.features_block_8  %}
                              {% endblock column_2 %}
                          {% endembed %}

                          {% include "@molecules/header-image/_header-image.twig" with content.features_header_image_3  %}

                          {% embed '@atoms/grid/_grid-1-up.twig' %}
                              {% block column_1 %}
                                  {% include "@molecules/block-grid/_block-grid.twig" with content.features_block_9  %}
                              {% endblock column_1 %}
                          {% endembed %}
                      </div>
                  {% endblock column_1 %}
              {% endembed %}
          </div>
      {% endif %}


      {% if content.how_banner %}
          <div class="mb-3">
              {% embed '@atoms/grid/_grid-1-up.twig' %}
                  {% block column_1 %}
                      {% include "@molecules/banner/_banner.twig" with content.how_banner  %}
                  {% endblock column_1 %}
              {% endembed %}
              <div class="page-width">
                  {% embed '@atoms/grid/_grid-3-up.twig' %}
                      {% block column_1 %}
                          {% include "@molecules/block-grid/_block-grid.twig" with content.how_block_1  %}
                      {% endblock column_1 %}

                      {% block column_2 %}
                          {% include "@molecules/block-grid/_block-grid.twig" with content.how_block_2  %}
                      {% endblock column_2 %}

                      {% block column_3 %}
                          {% include "@molecules/block-grid/_block-grid.twig" with content.how_block_3  %}
                      {% endblock column_3 %}
                  {% endembed %}

                  {% embed '@atoms/grid/_grid-1-up.twig' %}
                      {% block column_1 %}
                          {% include "@molecules/block-grid/_block-grid.twig" with content.how_block_4  %}
                      {% endblock column_1 %}
                  {% endembed %}
              </div>
          </div>
      {% endif %}

      {% if content.training_banner %}
          <div class="mb-3">
              {% embed '@atoms/grid/_grid-1-up.twig' %}
                  {% block column_1 %}
