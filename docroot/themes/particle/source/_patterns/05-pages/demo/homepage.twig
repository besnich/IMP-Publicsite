{% extends '@templates/site-container.twig' %}
  {% block content %}

      {% if content.splash_block %}
            {% include "@molecules/splash/_splash.twig" with content.splash_block %}
      {% endif %}

      {% if content.background_banner %}
          <div class="mb-3">
              {% embed '@atoms/grid/_grid-1-up.twig' %}
                  {% block column_1 %}
                      {% include "@molecules/banner/_banner.twig" with content.background_banner %}
                      <div class="page-width">
                          {% include "@molecules/block-grid/_block-grid.twig" with content.background_block_1 %}
                          {% include "@molecules/block-grid/_block-grid.twig" with content.background_block_2 %}
                      </div>
                  {% endblock column_1 %}
              {% endembed %}
          </div>
      {% endif %}

      {% if content.features_banner %}
          <div class="mb-3">
              {% embed '@atoms/grid/_grid-1-up.twig' %}
                  {% block column_1 %}
                      {% include "@molecules/banner/_banner.twig" with content.features_banner  %}

                      <div class="page-width">
                          {% include "@molecules/header-image/_header-image.twig" with content.features_header_image  %}

                          {% embed '@atoms/grid/_grid-2-up.twig' %}
                              {% block column_1 %}
                                 {% include "@molecules/block-grid/_block-grid.twig" with content.features_block_1  %}
                              {% endblock column_1 %}

                              {% block column_2 %}
                                 {% include "@molecules/block-grid/_block-grid.twig" with content.features_block_2  %}
                              {% endblock column_2 %}
                          {% endembed %}

                          {% embed '@atoms/grid/_grid-2-up.twig' %}
                              {% block column_1 %}
                                  {% include "@molecules/block-grid/_block-grid.twig" with content.features_block_3  %}
                              {% endblock column_1 %}

                              {% block column_2 %}
                                  {% include "@molecules/block-grid/_block-grid.twig" with content.features_block_4  %}
                              {% endblock column_2 %}
                          {% endembed %}

                          {% include "@molecules/header-image/_header-image.twig" with content.features_header_image_2  %}

                          {% embed '@atoms/grid/_grid-2-up.twig' %}
                              {% block column_1 %}
                                  {% include "@molecules/block-grid/_block-grid.twig" with content.features_block_5  %}
                              {% endblock column_1 %}

                              {% block column_2 %}
                                  {% include "@molecules/block-grid/_block-grid.twig" with content.features_block_6  %}
